<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bbaa"
    >


    <!-- 这是一个默认的图片-->
    <ImageView
        android:id="@+id/iv_showImage_MainActivityitemView"
        android:layout_width="400dp"
        android:layout_height="400dp"
       android:src="@drawable/img_rabit"
        />

    <TextView
        android:id="@+id/tv_name_MainActivityitemView"
        android:textSize="25dp"
        android:hint="姓名"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/iv_showImage_MainActivityitemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_photoNumber_MainActivityitemview"
        android:layout_below="@+id/tv_name_MainActivityitemView"
        android:textSize="25dp"
        android:hint="电话号码"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
